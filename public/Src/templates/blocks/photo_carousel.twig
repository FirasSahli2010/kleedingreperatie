<div id="carouselExample" class="carousel slide" data-bs-ride="carousel" style=" background-color:#E1C3C3;">
    <div class="carousel-inner" style=" background-color:#E1C3C3;">
        {% for item in carouselItems %}
            <div class="carousel-item {% if loop.first %}active{% endif %}">
                <div class="row col-12">
                    <div class="col-4">
                        <img src="/assets/img/carousel/{{ item.image_url }}" class="d-block " alt="{{ item.title }}" style="width: 100%;">
                    </div>
                    <div class="col-8">
                        <h3 >{{item.title}}</h3>
                    
                        <p>{{ item.description | raw}}</p>  
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExample" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExample" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>