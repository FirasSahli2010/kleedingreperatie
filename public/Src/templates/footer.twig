<script>
function toggleReviewDetails(reviewId) {
    var fullReview = document.getElementById('review-' + reviewId);
    if (fullReview.style.display === 'none') {
        fullReview.style.display = 'block';
    } else {
        fullReview.style.display = 'none';
    }
}

let currentReviewCount = 10;  // Initially load 10 reviews
function loadMoreReviews() {
    // Fetch the next batch of reviews via an AJAX call or a page reload with updated pagination
    fetch(`/reviews/load-more?offset=${currentReviewCount}`)
        .then(response => response.json())
        .then(data => {
            // Append new reviews to the list and update currentReviewCount
            const reviewsContainer = document.querySelector('.review-item');
            data.reviews.forEach(review => {
                reviewsContainer.innerHTML += `
                    <li class="review-item">
                        <strong>${review.name}</strong> - <span>${review.created_at}</span>
                        <p>${review.stars} / 5</p>
                        <div class="stars">
                            ${generateStars(review.stars)}
                        </div>
                        <p class="truncated-review">
                            ${review.review.substring(0, 100)}...
                        </p>
                        <button class="expand-btn" onclick="toggleReviewDetails('${review.id}')">Lees Meer</button>
                        <div id="review-${review.id}" class="full-review" style="display:none;">
                            <p>${review.review}</p>
                            ${review.reply ? `<p><em>Antwoord van de kliniek: ${review.reply}</em></p>` : ''}
                        </div>
                    </li>
                `;
            });
            currentReviewCount += 10;
        });
}

function generateStars(starCount) {
    let stars = '';
    for (let i = 1; i <= 5; i++) {
        stars += `<span class="star ${i <= starCount ? 'filled' : ''}">★</span>`;
    }
    return stars;
}
